{
  "name": "server",
  "version": "1.2.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "postinstall": "tsc",
    "deploy": "git add . && git commit -m Heroku && git push heroku main",
    "build": "tsc",
    "build:live": "nodemon --watch './' --exec ts-node src/server.ts",
    "start": "node dist/index.js",
    "dev": "npm run build:live",
    "commit": "git-cz",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "addMocks": "mongoimport --jsonArray --db cheapifyme --collection places --file ./src/mocks/data.json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "^2.18.2",
    "apollo-server-express": "^2.18.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "graphql-geojson-scalar-types": "0.0.5",
    "mongodb": "^3.6.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/mongodb": "^3.5.27",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "babel-jest": "^26.5.2",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "graphql-geojson": "^1.0.0",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "lint-staged": "^10.4.0",
    "mongoose": "^5.10.9",
    "neo4j-graphql-js": "^2.16.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./server/node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md, ts}": "eslint --cache --fix",
    "*.{js,css, ts}": "prettier --write"
  }
}
